<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="sweat_monteserrat">
        <item name="android:fontFamily">@font/sweat_montserrat</item>
    </style>

    <style name="page_title_text" parent="sweat_monteserrat">
        <item name="android:textSize">@dimen/page_title_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="program_card_title_text" parent="sweat_monteserrat">
        <item name="android:textSize">@dimen/program_card_title_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="program_card_trainer_text">
        <item name="android:textSize">@dimen/program_card_trainer_text_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/sweat_opensans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="program_card_rating" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">3</item>
        <item name="android:stepSize">0.5</item>
    </style>

</resources>
