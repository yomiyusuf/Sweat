<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="16dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        >

        <ImageView
            android:id="@+id/image_program_trainer"
            android:layout_width="105dp"
            android:layout_height="260dp"
            android:src="@drawable/trainer"
            android:scaleType="centerCrop"
            android:contentDescription="@string/program_trainer_image"
            app:layout_constraintTop_toTopOf="@id/txt_program_title"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txt_program_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BBG"
            style="@style/program_card_title_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/image_program_trainer"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:id="@+id/txt_program_trainer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="with Kayla Itsines"
            style="@style/program_card_trainer_text"
            app:layout_constraintTop_toBottomOf="@id/txt_program_title"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/rating_program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/program_card_rating"
            style="?attr/ratingBarStyleSmall"
            android:rating="2.5"
            app:layout_constraintTop_toBottomOf="@id/txt_program_trainer_name"
            app:layout_constraintStart_toStartOf="parent"
            />

        <LinearLayout
            android:id="@+id/layout_program_attributes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/rating_program"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/txt_program_title"
            android:layout_marginTop="4dp"
            >
        </LinearLayout>

        <com.github.tommykw.tagview.TagView
            android:id="@+id/tagview_program_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:stroke_width="1dp"
            app:stroke_color="@color/light_grey"
            app:background_color="@color/white"
            app:horizontal_spacing="4dp"
            app:vertical_spacing="4dp"
            app:text_font_size="3sp"
            app:corner_radius="5dp"
            app:text_color="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/layout_program_attributes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/txt_program_title"
            android:layout_marginTop="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
